<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/holder_text_post_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:maxLines="2"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textColor="#333"
        android:textSize="20sp"
        tools:text="fafesdfafesdfafdsff" />

    <TextView
        android:id="@+id/holder_text_post_tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/holder_text_post_tv_title"
        android:maxLines="9"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:textColor="#808080"
        android:textSize="14sp"
        tools:text="dfijasfjioasjfi" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/holder_text_post_tv_summary"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/holder_text_post_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            tools:text="sdfosfiosfiosif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text=" Â· " />

        <TextView
            android:id="@+id/holder_text_post_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333"
            tools:text="hshdfkshdkfjhsk" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/holder_text_post_tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/ic_comment_black_18dp"
            android:drawablePadding="5dp"
            android:textColor="#333"
            tools:text="153" />

        <TextView
            android:id="@+id/holder_text_post_tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/ic_thumb_up_black_18dp"
            android:drawablePadding="5dp"
            android:textColor="#333"
            tools:text="79" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/container"
        android:background="@color/grey_450" />
</RelativeLayout>