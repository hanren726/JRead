<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/story_title"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="120dp"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/story_count"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/story_image"
            tools:text="这是标题这是标题这是标题这是标题这是标题这是标题" />

        <TextView
            android:id="@+id/story_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/more_pic"
            android:drawablePadding="2dp"
            android:paddingLeft="10dp"
            android:textColor="@color/black_transparency_600"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/story_image"
            app:layout_constraintTop_toBottomOf="@id/story_title"
            android:text="有多图喔" />

        <ImageView
            android:id="@+id/story_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/news" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>